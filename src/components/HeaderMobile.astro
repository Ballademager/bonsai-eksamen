<section>
  <div class="menu_container">
    <div class="burger">
      <div class="bar"></div>
    </div>
  </div>
  <a href="/"
    ><img class="logo" src="/img/logo.png" alt="BonsaihjÃ¸rnets logo" /></a
  >
  <img class="kurv" src="/img/mobile_header_kurv.svg" alt="Kurven" />
  <img class="kurv_web" src="/img/header_kurv_web.svg" alt="Kurven" />
</section>
<script src="../scripts/burger.js"></script>

<style>
  section {
    padding-top: 15px;
    padding-bottom: 5px;
    display: flex;
    align-items: center;
    justify-content: space-around;
    background-image: url(/img/header_index_splash.webp);
    height: 100px;
    width: 100%;
    background-size: cover;
    position: fixed;
    z-index: 50;
  }

  a {
    width: 50px;
  }

  .kurv {
    width: 44px;
    cursor: pointer;
  }

  .kurv_web {
    display: none;
  }

  .burger {
    position: relative;
    z-index: 90;
    display: block;
    cursor: pointer;
  }
  .burger .bar,
  .burger::before,
  .burger::after {
    content: "";
    display: block;
    width: 30px;
    height: 2px;
    border-radius: 5px;
    background-color: var(--white-text);
    margin: 0 0 8px 0px;
    transition: 0.8s;
  }

  .burger::after {
    margin: 0;
  }
  .burger.is-active::before {
    transform: rotate(45deg) translate(5px, 15px);
  }
  .burger.is-active::after {
    transform: rotate(-45deg) translate(0px, -10px);
  }
  .burger.is-active .bar {
    opacity: 0;
  }

  @media (min-width: 700px) {
    section {
      padding-top: 0px;
      padding-left: 30px;
      padding-right: 30px;
      padding-bottom: 0px;
      justify-content: space-between;
      background-image: url(/img/header_index_web.webp);
      height: 125px;
    }

    section :nth-child(1) {
      order: 2;
    }

    section :nth-child(2) {
      order: 1;
    }

    section :nth-child(4) {
      order: 3;
    }

    a {
      width: 80px;
      align-self: center;
    }

    .kurv {
      display: none;
    }
    .kurv_web {
      display: block;
      width: 115px;
      height: 38px;
    }
  }
</style>
