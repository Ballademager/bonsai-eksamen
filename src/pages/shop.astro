---
import Layout from "../layout/Layout.astro";
---

<Layout title="BonsaihjÃ¸rnet">
  <main>
    <section class="section">
      <h1>Shop</h1>
      <img src="/img/gren.svg" alt="figur af bonsaigren" class="gren" />
    </section>
    <section class="section2">
      <a href="/bonsaitrees"><div class="firstbox"></div></a>
      <div class="split">
        <div class="secondbox"></div><div class="thirdbox"></div>
      </div>
      <div class="split2">
        <div class="fourthbox"></div>
        <div class="fifthbox"></div>
      </div>
      <div class="sixthbox"></div>
    </section>
  </main>
</Layout>

<style>
  main {
    position: relative;
    top: 160px;
    padding-bottom: 55px;
    margin-bottom: 160px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .section {
    padding-top: 28px;
    padding-bottom: 50px;
  }

  img {
    width: 120px;
  }
  h1 {
    color: var(--green);
    font-family: var(--ff-cta);
    font-weight: var(--fw-l);
    font-size: var(--fs-1);
  }
  .section2 {
    display: grid;
    grid-template-rows: 1fr 1fr 1fr 1fr;
    width: 350px;
    justify-content: center;
  }

  .firstbox {
    width: 350px;
    height: 190px;
    margin-bottom: 4px;
    background-image: url(/img/shop_bonsaitrees.webp);
    background-size: cover;
    grid-row: 1;
    /* margin-bottom: 5px; */
  }

  .split {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-row: 2;
  }

  .secondbox {
    width: 169px;
    height: 180px;
    background-color: rgb(72, 72, 179);
    grid-column: 1;
    align-self: center;
  }

  .thirdbox {
    width: 169px;
    height: 180px;
    background-color: rgb(72, 179, 140);
    grid-column: 2;
    justify-self: flex-end;
    align-self: center;
  }

  .split2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-row: 3;
  }

  .fourthbox {
    width: 169px;
    height: 180px;
    background-color: rgb(179, 140, 72);
    grid-column: 1;
    align-self: center;
  }

  .fifthbox {
    width: 169px;
    height: 180px;
    background-color: rgb(142, 72, 179);
    grid-column: 2;
    justify-self: flex-end;
    align-self: center;
  }

  .sixthbox {
    width: 350px;
    height: 160px;
    margin-top: 4px;
    background-color: rgb(179, 81, 72);
    grid-row: 4;
    justify-self: flex-end;
  }

  @media (min-width: 550px) {
    .secondbox,
    .thirdbox,
    .fourthbox,
    .fifthbox {
      width: 245px;
    }
    .firstbox,
    .sixthbox {
      width: 500px;
    }
  }

  @media (min-width: 1000px) {
    .secondbox,
    .thirdbox,
    .fourthbox,
    .fifthbox {
      width: 310px;
      height: 300px;
    }

    .firstbox {
      width: 950px;
      height: 300px;
    }

    .thirdbox {
      position: relative;
      justify-self: flex-start;
      left: -155px;
    }

    .fourthbox {
      position: relative;
      top: -304px;
      left: 640px;
    }

    .fifthbox {
      position: relative;
      left: -640px;
      top: 4px;
    }

    .sixthbox {
      position: relative;
      width: 630px;
      height: 300px;
      top: -302px;
    }
  }
</style>
