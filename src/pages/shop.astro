---
import Layout from "../layout/Layout.astro";
---

<Layout title="Bonsaihjørnet">
  <main>
    <section class="section">
      <h1>Shop</h1>
      <img src="/img/gren.svg" alt="figur af bonsaigren" class="gren" />
    </section>
    <section class="section2">
      <a href="/bonsaitrees"
        ><div class="firstbox"><h2>Bonsai træer</h2></div></a
      >
      <div class="split">
        <div class="secondbox"><h2>Bonsai skåle</h2></div><div class="thirdbox">
          <h2>Redskaber</h2>
        </div>
      </div>
      <div class="split2">
        <div class="fourthbox"></div>
        <div class="fifthbox"></div>
      </div>
      <div class="sixthbox"></div>
    </section>
  </main>
</Layout>

<style>
  main {
    position: relative;
    padding-bottom: 70px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .section {
    padding-top: 28px;
    padding-bottom: 50px;
  }

  img {
    width: 120px;
  }
  h1 {
    color: var(--green);
    font-family: var(--ff-cta);
    font-weight: var(--fw-l);
    font-size: var(--fs-1);
  }
  .section2 {
    display: grid;
    grid-template-rows: 1fr 1fr 1fr 1fr;
    width: 350px;
    justify-content: center;
  }

  .firstbox {
    position: relative;
    width: 350px;
    height: 190px;
    margin-bottom: 8px;
    background-image: url(/img/shop_bonsaitree.webp);
    background-size: cover;
    grid-row: 1;
    /* margin-bottom: 5px; */
  }

  .firstbox h2 {
    position: absolute;
    background-color: #00000062;
    box-shadow: 0 0 8px 8px #00000062;
    top: 85px;
    left: 100px;
    font-family: var(--ff-cta);
    font-weight: var(--fw-sb);
    text-align: center;
    border-radius: 100%;
    color: var(--white-text);
  }

  .secondbox h2 {
    position: absolute;
    background-color: #00000062;
    box-shadow: 0 0 8px 8px #00000062;
    top: 85px;
    left: 10px;
    font-family: var(--ff-cta);
    font-weight: var(--fw-sb);
    text-align: center;
    border-radius: 100%;
    color: var(--white-text);
  }

  .thirdbox h2 {
    position: absolute;
    background-color: #00000062;
    box-shadow: 0 0 8px 8px #00000062;
    top: 85px;
    left: 20px;
    font-family: var(--ff-cta);
    font-weight: var(--fw-sb);
    text-align: center;
    border-radius: 100%;
    color: var(--white-text);
  }

  .split {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-row: 2;
  }

  .secondbox {
    position: relative;
    width: 166px;
    height: 180px;
    grid-column: 1;
    align-self: center;
    background-image: url(/img/shop_bonsaibowl.webp);
    background-size: cover;
  }

  .thirdbox {
    width: 166px;
    height: 180px;
    background-color: rgb(72, 179, 140);
    grid-column: 2;
    justify-self: flex-end;
    align-self: center;
    position: relative;
  }

  .split2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-row: 3;
  }

  .fourthbox {
    width: 166px;
    height: 180px;
    background-color: rgb(179, 140, 72);
    grid-column: 1;
    align-self: center;
  }

  .fifthbox {
    width: 166px;
    height: 180px;
    background-color: rgb(142, 72, 179);
    grid-column: 2;
    justify-self: flex-end;
    align-self: center;
  }

  .sixthbox {
    width: 350px;
    height: 160px;
    margin-top: 8px;
    background-color: rgb(179, 81, 72);
    grid-row: 4;
    justify-self: flex-end;
  }

  @media (min-width: 550px) {
    .secondbox,
    .thirdbox,
    .fourthbox,
    .fifthbox {
      width: 240px;
      height: 178px;
    }
    .firstbox,
    .sixthbox {
      width: 500px;
    }
  }

  @media (min-width: 1000px) {
    .secondbox,
    .thirdbox,
    .fourthbox,
    .fifthbox {
      width: 295px;
      height: 300px;
    }

    .section {
      padding-bottom: 80px;
    }
    main {
      padding-top: 45px;
      margin-bottom: -200px;
    }
    .firstbox {
      width: 950px;
      height: 300px;
      margin-bottom: 18px;
    }

    .thirdbox {
      position: relative;
      justify-self: flex-start;
      left: -148px;
    }

    .fourthbox {
      position: relative;
      top: -318px;
      left: 655px;
    }

    .fifthbox {
      position: relative;
      left: -655px;
      top: 12px;
    }

    .sixthbox {
      position: relative;
      width: 623px;
      height: 300px;
      top: -305px;
    }
  }
</style>
