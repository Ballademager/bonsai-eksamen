---
import Layout from "../layout/Layout.astro";
---

<Layout title="Bonsaihjørnet">
  <main>
    <section class="section">
      <h1>Shop</h1>
      <img src="/img/gren.svg" alt="figur af bonsaigren" class="gren" />
    </section>
    <section class="section2">
      <a href="/bonsaitrees"
        ><div class="firstbox filter"><h2>Bonsaitræer</h2></div></a
      >
      <div class="split">
        <div class="secondbox filter"><h2>Bonsaiskåle</h2></div>
        <div class="thirdbox filter">
          <h2>Redskaber</h2>
        </div>
      </div>
      <div class="split2">
        <div class="fourthbox filter"><h2>Jord</h2></div>
        <div class="fifthbox filter"><h2>Gødning</h2></div>
      </div>
      <div class="sixthbox filter"><h2>Diverse</h2></div>
    </section>
  </main>
</Layout>

<style>
  main {
    position: relative;
    padding-bottom: 70px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .section {
    padding-top: 28px;
    padding-bottom: 50px;
  }

  img {
    width: 120px;
  }
  h1 {
    color: var(--green);
    font-family: var(--ff-cta);
    font-weight: var(--fw-l);
    font-size: var(--fs-1);
  }
  .section2 {
    display: grid;
    grid-template-rows: 1fr 1fr 1fr 1fr;
    width: 350px;
    justify-content: center;
  }
  .firstbox h2 {
    position: absolute;
    top: 85px;
    left: 100px;
    font-family: var(--ff-cta);
    font-weight: var(--fw-sb);
    text-align: center;
    border-radius: 15px;
  }
  .firstbox,
  .secondbox,
  .thirdbox,
  .fourthbox,
  .fifthbox,
  .sixthbox {
    background-size: cover;
    position: relative;
    color: var(--white);
  }

  h2 {
    position: absolute;
    font-family: var(--ff-cta);
    font-weight: var(--fw-sb);
    text-align: center;
  }

  .firstbox {
    width: 350px;
    height: 190px;
    margin-bottom: 8px;
    /* background: url(img/shop_bonsaitree.webp); */
    background-size: cover;
    background-image: url(/img/shop_bonsaitree.webp);
    grid-row: 1;
    background-position: center;
  }

  .split {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-row: 2;
  }
  .secondbox {
    width: 166px;
    height: 180px;
    grid-column: 1;
    align-self: center;
    background-image: url(/img/shop_bonsaibowl.webp);
  }
  .secondbox h2 {
    top: 85px;
    left: 10px;
  }
  .thirdbox {
    width: 166px;
    height: 180px;
    grid-column: 2;
    justify-self: flex-end;
    align-self: center;
    background-image: url(/img/tools_mobil.webp);
  }
  .thirdbox h2 {
    position: absolute;
    top: 85px;
    left: 20px;
    font-family: var(--ff-cta);
    font-weight: var(--fw-sb);
    text-align: center;
    border-radius: 15px;
  }
  .split2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-row: 3;
  }

  .fourthbox {
    width: 166px;
    height: 180px;
    background-color: rgb(179, 140, 72);
    grid-column: 1;
    align-self: center;
    background-image: url(/img/jord_mobil.webp);
  }
  .fourthbox h2 {
    position: absolute;
    top: 85px;
    left: 50px;
    font-family: var(--ff-cta);
    font-weight: var(--fw-sb);
    text-align: center;
    border-radius: 15px;
  }

  .fifthbox {
    width: 166px;
    height: 180px;
    background-color: rgb(142, 72, 179);
    grid-column: 2;
    justify-self: flex-end;
    align-self: center;
    background-image: url(/img/godning_mobil.webp);
  }

  .fifthbox h2 {
    position: absolute;
    top: 85px;
    left: 30px;
    font-family: var(--ff-cta);
    font-weight: var(--fw-sb);
    text-align: center;
    border-radius: 15px;
  }
  .sixthbox {
    width: 350px;
    height: 160px;
    margin-top: 8px;
    background-color: rgb(179, 81, 72);
    grid-row: 4;
    justify-self: flex-end;
    background-image: url(/img/diverse.webp);
  }
  .filter {
    isolation: isolate;
  }
  .filter::after {
    content: "";
    position: absolute;
    inset: 0;
    background: var(--almost-black);
    z-index: -1;
    opacity: 0.3;
  }
  .secondbox.filter::after,
  .fifthbox.filter::after,
  .sixthbox.filter::after {
    opacity: 0.4;
  }

  .sixthbox h2 {
    position: absolute;
    /* background-color: #00000085;
    box-shadow: 0 0 10px 10px #00000085; */
    top: 70px;
    left: 120px;
    font-family: var(--ff-cta);
    font-weight: var(--fw-sb);
    text-align: center;
    border-radius: 15px;
  }

  @media (min-width: 550px) {
    .secondbox,
    .thirdbox,
    .fourthbox,
    .fifthbox {
      width: 240px;
      height: 178px;
    }
    .firstbox,
    .sixthbox {
      width: 500px;
    }

    .secondbox {
      background-image: url(/img/shop_bonsaibowl_medium.webp);
    }

    .thirdbox {
      background-image: url(img/tool_medium.webp);
    }
    .fourthbox {
      background-image: url(img/jord_medium.webp);
    }

    .fifthbox {
      background-image: url(img/godning.webp);
    }

    .firstbox h2 {
      left: 170px;
    }
    .secondbox h2 {
      left: 50px;
    }

    .thirdbox h2 {
      left: 60px;
    }

    .fourthbox h2 {
      left: 90px;
    }

    .fifthbox h2 {
      left: 70px;
    }

    .sixthbox h2 {
      left: 210px;
    }
  }

  @media (min-width: 1000px) {
    img {
      width: 220px;
    }
    h1 {
      font-size: var(--fs-2w);
      text-align: center;
    }

    h2 {
      font-size: 45px;
    }
    .secondbox,
    .thirdbox,
    .fourthbox,
    .fifthbox {
      width: 295px;
      height: 300px;
    }

    .section {
      padding-bottom: 80px;
    }
    main {
      padding-top: 45px;
      margin-bottom: -200px;
    }
    .firstbox {
      width: 950px;
      height: 300px;
      margin-bottom: 18px;
    }

    .firstbox h2 {
      top: 135px;
      left: 340px;
    }
    .secondbox h2 {
      top: 125px;
      left: 15px;
    }

    .thirdbox h2 {
      top: 125px;
      left: 30px;
    }

    .fourthbox h2 {
      top: 125px;
      left: 95px;
    }

    .fifthbox h2 {
      top: 125px;
      left: 55px;
    }

    .sixthbox h2 {
      top: 125px;
      left: 220px;
    }
    .secondbox {
      background-image: url(img/shop_bonsaibowl.webp);
    }

    .thirdbox {
      position: relative;
      justify-self: flex-start;
      left: -148px;
      background-image: url(img/tools.webp);
    }

    .fourthbox {
      position: relative;
      top: -318px;
      left: 655px;
      background-image: url(img/jord.webp);
    }

    .fifthbox {
      position: relative;
      left: -655px;
      top: 12px;
    }

    .sixthbox {
      position: relative;
      width: 623px;
      height: 300px;
      top: -305px;
    }
  }
</style>
